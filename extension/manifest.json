{
  "manifest_version": 3,
  "name": "ChenYiFaer Live Streams Helper",
  "description": "Displays a live video list for the ChenYiFaer YouTube channel with chat download functionality.",
  "version": "1.0.0",
  "host_permissions": [
    "https://www.youtube.com/*"
  ],
  "permissions": [
    "downloads"
  ],
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["contentScript.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ]
}
